{
  "title": "_TimeSteppings",
  "type": "object",
  "additionalProperties": false,
  "definitions": {
    "RampCFL": {
      "title": "Ramp cfl",
      "type": "object",
      "properties": {
        "type": {
          "title": "Type",
          "default": "ramp",
          "const": "ramp",
          "type": "string"
        },
        "initial": {
          "title": "Initial",
          "exclusiveMinimum": 0,
          "type": "number"
        },
        "final": {
          "title": "Final",
          "exclusiveMinimum": 0,
          "type": "number"
        },
        "rampSteps": {
          "title": "Ramp steps",
          "type": "integer"
        },
        "randomizer": {
          "title": "Randomizer",
          "type": "object"
        }
      },
      "additionalProperties": false
    },
    "AdaptiveCFL": {
      "title": "Adaptive cfl",
      "type": "object",
      "properties": {
        "type": {
          "title": "Type",
          "default": "adaptive",
          "const": "adaptive",
          "type": "string"
        },
        "min": {
          "title": "Min",
          "default": 0.1,
          "exclusiveMinimum": 0,
          "type": "number"
        },
        "max": {
          "title": "Max",
          "default": 10000,
          "exclusiveMinimum": 0,
          "type": "number"
        },
        "maxRelativeChange": {
          "title": "Max relative change",
          "default": 1,
          "exclusiveMinimum": 0,
          "type": "number"
        },
        "convergenceLimitingFactor": {
          "title": "Convergence limiting factor",
          "default": 0.25,
          "exclusiveMinimum": 0,
          "type": "number"
        }
      },
      "additionalProperties": false
    },
    "_SteadyTimeStepping": {
      "title": "Steady time stepping",
      "type": "object",
      "properties": {
        "physicalSteps": {
          "title": "Physical steps",
          "default": 1,
          "const": 1,
          "type": "integer"
        },
        "maxPseudoSteps": {
          "title": "Max pseudo steps",
          "exclusiveMinimum": 0,
          "type": "integer"
        },
        "timeStepSize": {
          "title": "Time step size",
          "default": "inf",
          "const": "inf",
          "type": "string"
        },
        "CFL": {
          "title": "Cfl",
          "anyOf": [
            {
              "$ref": "#/definitions/RampCFL"
            },
            {
              "$ref": "#/definitions/AdaptiveCFL"
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "_UnsteadyTimeStepping": {
      "title": "Unsteady time stepping",
      "type": "object",
      "properties": {
        "physicalSteps": {
          "title": "Physical steps",
          "exclusiveMinimum": 0,
          "type": "integer"
        },
        "maxPseudoSteps": {
          "title": "Max pseudo steps",
          "exclusiveMinimum": 0,
          "type": "integer"
        },
        "timeStepSize": {
          "title": "Time step size",
          "properties": {
            "value": {
              "type": "number",
              "exclusiveMinimum": 0
            },
            "units": {
              "type": "string",
              "dimension": "time",
              "enum": [
                "s",
                "flow360_time_unit"
              ]
            }
          }
        },
        "CFL": {
          "title": "Cfl",
          "anyOf": [
            {
              "$ref": "#/definitions/RampCFL"
            },
            {
              "$ref": "#/definitions/AdaptiveCFL"
            }
          ]
        }
      },
      "required": [
        "physicalSteps",
        "timeStepSize"
      ],
      "additionalProperties": false
    }
  },
  "anyOf": [
    {
      "$ref": "#/definitions/_SteadyTimeStepping",
      "title": "Steady"
    },
    {
      "$ref": "#/definitions/_UnsteadyTimeStepping",
      "title": "Unsteady"
    }
  ]
}